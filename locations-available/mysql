location /mysql {

    alias /usr/share/phpmyadmin;

    index index.php;
    try_files $uri $uri/ =404;

    location ~ ^/mysql/(README|LICENSE|ChangeLog|DCO|.+\.md)$ {
        deny all;
    }

    location ~ ^/mysql/(doc|sql|setup)/ {
        deny all;
    }

    location ~ /mysql/(.+\.php)$ {
        include locations-available/php_socket;
    }

}
