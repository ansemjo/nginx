location ~ /\.git {
    deny all;
}

#################################
# config for gitlist

location /git {

    error_page 401 /cookie?goto=git;
    auth_request /cookie/;

    root    /var/www/;
    index   index.php;

    try_files $uri @gitlist;

}

location @gitlist {
        rewrite ^/.*$ /git/index.php;
}
