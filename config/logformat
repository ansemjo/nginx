log_format custom '$remote_addr $remote_user $host - $status ($body_bytes_sent bytes) '
                  '"$request" "$http_referer" "$http_user_agent" "$http_x_forwarded_for"';

access_log syslog:server=unix:/dev/log,tag=NGINX_ACCESS,nohostname custom;
error_log  syslog:server=unix:/dev/log,tag=NGINX_ERROR,nohostname warn;
