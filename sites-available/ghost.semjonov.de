server {

    listen 443;
    listen [::]:443;

    server_name ghost.semjonov.de;

    root	/var/www/ghost/content/themes/casper_edit;

    include params.d/proxy;
    index	index.html index.htm;

    ssl	on;
    ssl_certificate         /etc/ssl/semjonov.de/selfsigned/bundles/wildcard/wildcard.chain;
    ssl_certificate_key     /etc/ssl/semjonov.de/selfsigned/bundles/wildcard/wildcard.key;
    include params.d/ssl;

    include		locations-enabled/common/*;
    include		locations-enabled/ghost.semjonov.de/*;

}
