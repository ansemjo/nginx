server {

    listen 443 default_server;
    listen [::]:443 default_server ipv6only=on;

    server_name www.semjonov.de;

    if ($host != "$server_name") {
        return  302 https://$server_name$request_uri;
    }

    root    /var/www/common;
    index   index.php index.html index.htm;

    include params.d/proxy;
    include snippets/ssl_comodo;
    include locations/enabled/common/*;
    include locations/enabled/www.semjonov.de/*;

}
