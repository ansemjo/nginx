location ~ /\.git {
    deny all;
}

#################################
# config for gitlist

location /git {
    root    /var/www/;
    index   index.php;

    try_files $uri @gitlist;
}

location = /git/robots.txt {
    allow all;
    log_not_found off;
    access_log off;
 }

location @gitlist {
        rewrite ^/.*$ /git/index.php;
}

